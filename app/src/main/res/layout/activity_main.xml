<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purplyBlack"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="-1dp"
    tools:layout_editor_absoluteY="-1dp">

    <TextView
        android:id="@+id/rollVisualization"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/rounded_textview"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129" />

    <Button
        android:id="@+id/btnD4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#301267"
        android:onClick="rollD4Btn"
        android:text="D4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rollVisualization" />

    <Button
        android:id="@+id/btnD6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#301267"
        android:onClick="rollD6Btn"
        android:text="D6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.791"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rollVisualization" />

    <Button
        android:id="@+id/btnD8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#301267"
        android:onClick="rollD8Btn"
        android:text="D8"
        app:layout_constraintEnd_toEndOf="@+id/btnD4"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toStartOf="@+id/btnD4"
        app:layout_constraintTop_toBottomOf="@+id/btnD4" />

    <Button
        android:id="@+id/btnD10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#301267"
        android:onClick="rollD10Btn"
        android:text="D10"
        app:layout_constraintEnd_toEndOf="@+id/btnD6"
        app:layout_constraintHorizontal_bias="0.791"
        app:layout_constraintStart_toStartOf="@+id/btnD6"
        app:layout_constraintTop_toBottomOf="@+id/btnD6" />

    <Button
        android:id="@+id/btnD12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#301267"
        android:onClick="rollD12Btn"
        android:text="D12"
        app:layout_constraintEnd_toEndOf="@+id/btnD8"
        app:layout_constraintStart_toStartOf="@+id/btnD8"
        app:layout_constraintTop_toBottomOf="@+id/btnD8" />

    <Button
        android:id="@+id/btnD100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#301267"
        android:onClick="rollD100Btn"
        android:text="D100"
        app:layout_constraintEnd_toEndOf="@+id/btnD10"
        app:layout_constraintHorizontal_bias="0.792"
        app:layout_constraintStart_toStartOf="@+id/btnD10"
        app:layout_constraintTop_toBottomOf="@+id/btnD10" />

    <Button
        android:id="@+id/btnD20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        android:background="#301267"
        android:onClick="rollD20Btn"
        android:text="D20"
        app:layout_constraintEnd_toStartOf="@+id/btnD100"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnD12"
        app:layout_constraintTop_toBottomOf="@+id/btnD12" />

</androidx.constraintlayout.widget.ConstraintLayout>